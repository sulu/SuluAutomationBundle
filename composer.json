{
    "name": "sulu/automation-bundle",
    "type": "sulu-bundle",
    "description": "The Sulu Bundle which provides automation functionality",
    "license": "MIT",
    "keywords": ["sulu", "automation"],
    "authors": [
        {
            "name": "Sulu Community",
            "homepage": "https://github.com/sulu/SuluAutomationBundle/contributors"
        }
    ],
    "require": {
        "php": "^7.2",
        "friendsofsymfony/rest-bundle": "^2.5",
        "jms/serializer-bundle": "^3.0",
        "php-task/php-task": "1.3.2",
        "php-task/task-bundle": "^1.3",
        "sulu/sulu": "^2.0.7 || ^2.1",
        "symfony/config": "^4.3 || ^5.0",
        "symfony/dependency-injection": "^4.3 || ^5.0",
        "symfony/force-lowest": "^4.0",
        "symfony/http-foundation": "^4.3 || ^5.0",
        "symfony/http-kernel": "^4.3 || ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "symfony/stopwatch": "^4.3 || ^5.0",
        "symfony/browser-kit": "^4.3 || ^5.0",
        "symfony/dotenv": "^4.3 || ^5.0",
        "symfony/monolog-bundle": "^3.1",
        "symfony/templating": "^4.3 || ^5.0",
        "symfony/security-bundle": "^4.3 || ^5.0",
        "php-ffmpeg/php-ffmpeg": "^0.14.0",
        "jackalope/jackalope-doctrine-dbal": "^1.3.0",
        "zendframework/zendsearch": "@dev",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-symfony": "^0.12",
        "thecodingmachine/phpstan-strict-rules": "^0.12",
        "jangregor/phpstan-prophecy": "^0.8"
    },
    "autoload": {
        "psr-4": {
            "Sulu\\Bundle\\AutomationBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "2.0-dev"
        }
    },
    "scripts": {
        "phpstan": [
            "Tests/Application/bin/console cache:warmup --env dev",
            "vendor/bin/phpstan analyse"
        ],
        "bootstrap-test-env": [
            "Tests/Application/bin/console doctrine:database:create --if-not-exists",
            "Tests/Application/bin/console doctrine:schema:update --force"
        ],
        "phpunit": [
            "vendor/bin/phpunit"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
